.sky_title{
  display: flex;
  width: 100%;
  position: relative;
}
.sky_search{
  position: absolute;
  right: 20px;
  width: 20px;
  height: 20px;
}
.sky_list{
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.sky_item{
  width:32%;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius:10rpx;
  margin-top:15rpx;
}
.sky_item:not(:nth-child(3n)){
  margin-right: 2%;
}
.sky_img{
  width: 100%;
